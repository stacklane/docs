{{% json /_examples as examples}}

{{% svg /_logos/ as logo }}

{{% partial /_layout }}

{{<layout}}
{{$content}}

<article>
    <header>
        <h1>Playground</h1>

        <p>
            Get started with an example, or fork and create your own.
        </p>
    </header>

    <section>
        <h2>Load from GitHub</h2>

        <p>
            A public GitHub repository may be loaded and run.
            We'll check it for Stacklane compatible files and let you know of any problems.
            (Note: Playground data expires 48 hours after created.)
        </p>

        <p>
        <div class="input-group">
            <div class="input-group-addon line-height-svg">{{> logo-github}}</div>
            <input type="search" class="form-control"
                   placeholder="https://github.com/your/stacklane-repo.git">
            <div class="input-group-addon"><button class="btn btn-light btn-sm">Load</button></div>
        </div>
        </p>
    </section>

    <section>
        <h2>Examples</h2>

        <!--
            Data is loaded/imported from _examples.json
         -->
        {{#examples by 2 as grp}}
            <div class="card-deck small">
                {{#grp as example}}
                    <div class="card mb-4">
                        <div class="card-body">
                            <h6 class="card-title">{{title}}</h6>
                            <p class="card-text">
                                {{desc}}
                            </p>
                        </div>
                        <div class="card-footer text-right">
                            <a href="{{src}}" class="btn btn-sm btn-light">Source</a>
                            <a href="{{load}}" class="btn btn-sm btn-light">Load</a>
                        </div>
                    </div>
                {{/grp}}
            </div>
        {{/examples}}

    </section>
</article>

{{/content}}
{{/layout}}