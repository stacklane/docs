<!--
    Select the current nav link, and enable category expansion.
-->
<script>
    var elements = document.getElementsByClassName('nav-link');
    var loc = window.location.pathname;
    for (var i = 0; i < elements.length; i++){
        if (elements[i].getAttribute('href') == loc){
            elements[i].classList.add('active');
            elements[i].parentElement.parentElement.classList.toggle('d-none', false);
        }
    }

    var categories = document.getElementsByClassName('nav-category');
    for (var i = 0; i < categories.length; i++){
        categories[i].addEventListener("click", function( event ) {
            var cat = findCategory(event.target, 'nav-category');
            cat.nextElementSibling.classList.toggle('d-none');
        }, false);
    }

    function findCategory(el, cls) {
        if (el.classList.contains(cls)) return el;
        while ((el = el.parentElement) && !el.classList.contains(cls));
        return el;
    }
</script>


