$sl-logo-primary: #101e27;
//$sl-logo-secondary: #345167;
$sl-logo-secondary: #3284a0;

blockquote > p{
  margin: 0;
}

@mixin svg-color($color) {
  fill: $color;
  stroke: $color;
}

@mixin text-svg(){
  height: 1em !important;
  vertical-align: text-bottom;
}


/* Make sure filled and text elements only get fills */
.iconic-property-fill, .iconic-property-text {
  stroke: none !important;
}

/* Make sure stroked elements only get strokes */
.iconic-property-stroke {
  fill: none !important;
}

/**
 * Iconic duo tone
 */

@mixin iconic-color($color) {
  fill: $color;
  stroke: $color;
}

$color-primary: $sl-logo-primary;
$color-secondary: $sl-logo-secondary;

/* Make sure filled and text elements only get fills */
.iconic-property-fill, .iconic-property-text {
  stroke: none !important;
}

/* Make sure stroked elements only get strokes */
.iconic-property-stroke {
  fill: none !important;
}

/* Main color */
.iconic * {
  @include iconic-color($color-primary);
}

/* Accent color */
.iconic .iconic-property-accent {
  @include iconic-color($color-secondary);
}

/////////////////

.logo a, .logo a:visited, .logo a:hover{
  text-decoration: none;
  display:inline-block;
}
.logo svg{
  height: 1rem;
  vertical-align:text-bottom;
}
.logo .stacklane-logo .logo-graphic{
  display:none;
}
.logo .ext{
  font-weight: 500;
  color: black;
  padding-left: .25rem;
}





/**
 * Card links
 */

a.card{
  text-decoration: none !important;
  box-shadow: 0 1px 5px 0 rgba(0, 0, 0, .07), 0 7px 17px 0 rgba(0, 0, 0, .1);
  background: white;
  transition: box-shadow .2s ease-in-out, border-color .2s ease-in-out;
}
a.card:hover{
  box-shadow: 0 1px 5px 0 rgba(0, 0, 0, .12), 0 7px 25px 0 rgba(0, 0, 0, .15);
  border-color: $link-color;
}
a.card .card-text{
  color: black;
}
a.card .card-body{
  padding-bottom: 1rem;
}


/**
 * SVG icons inside input-group-text
 */
.input-group-text svg{
  vertical-align: text-bottom;
  height: 1rem !important;
  width: 1rem !important;
}

/**
 * Bootstrap changes
 */

.card-footer{
  background:none;
  border-top:none;
}
.card-body{
  padding-bottom: .5rem;
}

/**
 * Prism
 */

.line-highlight{
  margin-top: .5em; // unclear why adjustment needed -- bootstrap compat? orig value is 1em;
}

// prism overrides the bootstrap margin, so put it back
pre[class*=language-]{
  margin-bottom: 1rem;
}


